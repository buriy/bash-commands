#!/bin/sh

# A better syntax for find
#
#   each -name "*.pyc" -do rm 
# will be translated to:
#   find . -name "*.pyc" -exec rm {} \;
# or that also can be written as
#   find . -name "*.pyc" -print0 | xargs -0 -n 1 rm

i=0;
while [[ "z$1" != "z-do" && "$1" != "" ]]; do
    args[$i]=$1;
    i=$(expr $i + 1);
    shift;
done;
shift; # skip this -do
if [ "$1" != "" ] ; then
    find . "${args[@]}" -print0 | xargs -0 -n 1 "$@"
else;
    find . "${args[@]}" -print0
fi;
